@{
    ViewData["Title"] = "Create/Edit Expenses";
}

@model SpentSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
</div>

<form asp-action="CreateEditExpenseForm">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-formaction="Id"/>
    
    <label class="mt-4">Value</label>
    <input class="form-control" type="number" placeholder="0" asp-formaction="Value" step="0.01" />
    
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add a descriptiun" asp-formaction="Description" />

    <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>
